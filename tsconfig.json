{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": ["jest"],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDir": "src",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["*"]
    },
  },
  "include": [
    "src"
  ],
  "exclude": [
    "cypress", "node_modules", "./dist", "**/*.spec.tsx",
  ]
}